<div class="backdrop"></div>
<header class="main-header">
    <!-- <button id="side-menu-toggle">Menu</button> -->
    <nav class="main-header__nav row">
        <ul class="main-header__item-list">
            <li class="main-header__item">
                <a class="<%= path === '/' ? 'active' : '' %> " href="/">Products</a>
            </li>
            <% if (isAuthenticated) { %>
            <li class="main-header__item">
                <a class="<%= path === '/shop' ? 'active' : '' %>" href="/shop">Shop</a>
            </li>
            <li class="main-header__item col-md-auto">
                <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">
                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cart" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                    d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                    </svg> Cart
                </a>
            </li>
            <% if(user.isAdmin){%>
            <li class="main-header__item">
            <a class="<%= path === '/admin/allorders' ? 'active' : '' %>" href="/admin/allorders">All Orders</a>
            </li>
            <% } %>
            <% if(path === '/' || path === '/shop') { %>
            <li class="main-header__item col-lg-8 search-item">
                <form class="form-inline my-2 my-lg-0" method="get">
                    <input class="form-control mr-sm-2 col-lg-12" type="text" name="search" id="search" placeholder="Search products...">
                </form>
                </li>
            <% } %>    
        </ul>
        <ul  class="main-header__item-list main-header__item-list-right " >   
            <li class="main-header__item drop ">
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" id="dropdownMenu2"                data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <%= user.name %> <%= user.cash %>$
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <a class="<%= path === '/sales' ? 'active' : '' %> dropdown-item" href="/sales">My Sales</a>
                        <a class="<%= path === '/orders' ? 'active' : '' %> dropdown-item" href="/orders">My Orders</a>
                        <a class="<%= path === '/admin/products' ? 'active' : '' %> dropdown-item" href="/admin/products">My Products
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="<%= path === '/admin/add-product' ? 'active' : '' %> dropdown-item " href="/admin/add-product">Add Product
                        </a>
                        <a class="<%= path === '/add-cash' ? 'active' : '' %> dropdown-item " href="/add-cash">Add Cash!</a>
                    </div>
                </div>
            </li>
            <li class="main-header__item  ">
                <a href="/logout">Logout</a>
            </li>
        </ul>
            <% } %>
            <% if (!isAuthenticated) { %>
            </ul>
        <ul class="main-header__item-list">
        
        
            <li class="main-header__item">
                <a class="<%= path === '/login' ? 'active' : '' %>" href="/login">Login</a>
            </li>
            <li class="main-header__item">
                <a class="<%= path === '/signup' ? 'active' : '' %>" href="/signup">Sign Up</a>
            </li>
            <% } %>
        </ul>
    </nav>
</header>

<nav class="mobile-nav">
        <ul class="mobile-nav__item-list">
                <li class="mobile-nav__item">
                    <a class="<%= path === '/' ? 'active' : '' %>" href="/">Shop</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/products' ? 'active' : '' %>" href="/products">Products</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/cart' ? 'active' : '' %>" href="/cart">Cart</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/orders' ? 'active' : '' %>" href="/orders">Orders</a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/admin/add-product' ? 'active' : '' %>" href="/admin/add-product">Add Product
                    </a>
                </li>
                <li class="mobile-nav__item">
                    <a class="<%= path === '/admin/products' ? 'active' : '' %>" href="/admin/products">Admin Products
                    </a>
                </li>
            </ul>
            
</nav>
