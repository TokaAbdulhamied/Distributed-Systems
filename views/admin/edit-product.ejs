<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%= path %>" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= typeof product !== 'undefined'? product.title:'' %>">
            </div>
            <!-- <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= typeof product !== 'undefined'? product.imageUrl:'' %>">
            </div> -->
            <div class="form-control">
                <label for="image">Image</label>
                <input type="file" name="image" id="image" >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" step="0.01" value="<%= typeof product !== 'undefined'? product.price:'' %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= typeof product !== 'undefined'? product.description:'' %></textarea>
            </div>
            <% if (typeof product !== 'undefined') {
            %> <input type="hidden" name="id" value="<%= product.id %>">
            <% } %>

            <button class="btn" type="submit"><%= path === '/admin/edit-product'? 'Update Product':'Add Product' %></button>
            <% if (typeof errorMssg !== 'undefined') { %>
                <div>
                    <h3><%= errorMssg %></h3>
                </div>
            <% } %>
        </form>
    </main>
<%- include('../includes/end.ejs') %>